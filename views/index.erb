<% if session[:message] %>
  <p class="message"><%= session.delete(:message) %></p>
<% end %>

<ul>
  <% @files.each do |file| %>
    <li>
      <div>
        <a href="/<%= file %>"><%= file %></a>
        <a href="/<%= file %>/edit">Edit</a>
        <form class="inline" action="/<%= file %>/delete" method="post">
          <button type="submit">Delete</button>
        </form>
      </div>
    </li>
  <% end %>
</ul>
<a href="/new">New Document</a>